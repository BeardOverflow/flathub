{
    "app-id": "net.shrew.ike.qikea",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "command": "qikea",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--filesystem=home",
        "--filesystem=/run/ikedi",
        "--share=network",
        "--share=ipc",
        "--socket=x11"
    ],
    "modules": [
        "shared-modules/qt4/qt4-4.8.7-minimal.json",
        {
            "name": "libedit",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.thrysoee.dk/editline/libedit-20191231-3.1.tar.gz",
                    "sha256": "dbb82cb7e116a5f8025d35ef5b4f7d4a3cdd0a3909a146a39112095a2d229071"
                }
            ]
        },
        {
            "name": "berkeleydb",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.oracle.com/berkeley-db/db-5.3.28.tar.gz",
                    "sha256": "e0a992d740709892e81f9d93f06daf305cf73fb81b545afe72478043172c3628"
                }
            ],
            "subdir": "dist",
            "builddir": true
        },
        {
            "name": "openldap",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.openldap.org/software/download/OpenLDAP/openldap-release/openldap-2.4.55.tgz",
                    "sha256": "97357bd6ba8ff73d204c1f8208c5e6ab97d60c9e779f989057aa1229bbe98434"
                }
            ]
        },
        {
            "name": "ike",
            "buildsystem": "cmake",
            "config-opts": [
                "-DQTGUI=YES",
                "-DNATT=YES",
                "-DLDAP=YES"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.shrew.net/download/ike/ike-2.2.1-release.tgz",
                    "sha256": "1e5193dd2c5b26a999bcb2e0577d2d065a6c071667397fdc076ba4a6afc81e3a"
                },
                {
                    "type": "patch",
                    "paths": [
                        "patches/fix_readdir",
                        "patches/paths",
                        "patches/out-of-tree",
                        "patches/spelling",
                        "patches/underlinkage"
                    ]
                }
            ]
        },
        {
            "name": "qikea",
            "buildsystem": "simple",
            "build-commands": [
              "install -Dm644 net.shrew.ike.qikea.appdata.xml /app/share/appdata/net.shrew.ike.qikea.appdata.xml",
              "install -Dm644 net.shrew.ike.qikea.desktop /app/share/applications/net.shrew.ike.qikea.desktop",
              "install -Dm644 net.shrew.ike.qikea.128.png /app/share/icons/hicolor/128x128/apps/net.shrew.ike.qikea.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "net.shrew.ike.qikea.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "net.shrew.ike.qikea.desktop"
                },
                {
                    "type": "file",
                    "path": "net.shrew.ike.qikea.128.png"
                }
            ]
        }
    ]
}
